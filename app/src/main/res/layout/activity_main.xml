<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.mikolasan.petprojectnavigator.MainActivity"
    android:orientation="vertical"
    android:weightSum="8">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/project_view" >
    </ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/btn_add_project"
            android:id="@+id/btn_add_project"
            style="@android:style/Widget.Material.Button.Colored"
            android:background="@android:color/holo_orange_light" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/btn_backup_project"
            android:id="@+id/btn_backup_project"
            style="@android:style/Widget.Material.Button.Colored"
            android:background="@android:color/holo_green_dark" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/btn_to_cloud"
            android:id="@+id/btn_to_cloud"
            style="@android:style/Widget.Material.Button.Colored"
            android:background="@android:color/holo_green_light" />
    </LinearLayout>

</LinearLayout>

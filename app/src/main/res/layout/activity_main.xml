<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.mikolasan.petprojectnavigator.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/project_view" >
        </ListView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="3">

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_project"
                android:id="@+id/btn_add_project"
                style="@android:style/Widget.Material.Button.Colored"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_backup_project"
                android:id="@+id/btn_backup_project"
                style="@android:style/Widget.Material.Button.Colored"
                android:background="@android:color/holo_green_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_to_cloud"
                android:id="@+id/btn_to_cloud"
                style="@android:style/Widget.Material.Button.Colored"
                android:background="@android:color/holo_green_light" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
